generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    name      String?
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model Movie {
    id          Int      @id @default(autoincrement())
    title       String
    genre       String
    rating      String
    duration    Int
    releaseDate DateTime
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@map("movies")
}
